{% extends "::base.html.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1>Grade list</h1>

                <ul>
                    {% for grade in grades %}
                        <li>{{ grade.name }} - {{ grade.grade }}
                            - <a href="{{ path('grade_delete', {id: grade.id}) }}">Delete</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}